# Give your application a Unique name (no spaces)
APP_NAME=myapp

# false for production, true for development
DEBUG=true

# the port should we listen on
PORT=4000

# the server name, e.g, www.yoursite.com
SERVER_NAME=localhost

# should we use https?
SECURE=false

# database config - postgres or mysql
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=postgres
DATABASE_PASS=password
DATABASE_NAME=rapiditas
DATABASE_SSL_MODE=disable

# redis config
REDIS_HOST="localhost:6380"
REDIS_PASSWORD=
REDIS_PREFIX=rapiditas

# cache (currently only redis)
CACHE=redis

# cooking settings
COOKIE_NAME=rapiditas
COOKIE_LIFETIME=1640
COOKIE_PERSIST=true
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# session store: cookie, redis, mysql, or postgres
SESSION_TYPE=redis

# mail settings
SMTP_HOST=localhost
SMTP_USERNAME=christos
SMTP_PASSWORD=your_password
SMTP_PORT=25
SMTP_ENCRYPTION=none
SMTP_FROM=your@emailaddress.com

